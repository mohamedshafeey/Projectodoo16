<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="id_view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">view_move_line_tree_inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_currency']" position="after">
                    <field name="amount_currency_float" sum="total"/>
                </xpath>
                <xpath expr="//field[@name='amount_currency']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
            </field>
        </record>
        <record id="account_move_add_sale_create_date_id" model="ir.ui.view">
            <field name="name">account.move.add.sale_create_date</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="ChangeCurrency" type="object" string="Change Currency" states="draft"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="attributes">
                    <attribute name="string">Reference</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                    <field name="standard_price"/>
                    <field name="mergen"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="after">
                    <field name="standard_price" invisible="1"/>
                    <field name="mergen" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="mergen"/>
                </xpath>
            </field>
        </record>
        <record id="id_change_currency_form" model="ir.ui.view">
            <field name="name">change currency</field>
            <field name="model">change.currency</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="currency_id"/>
                                <field name="manual_currency_exchange_rate_x"  attrs="{'invisible': [('apply_manual_currency_exchange', '=', False)]}"/>
                                <field name="manual_currency_exchange_rate" invisible="1"/>
                            </group>
                            <group>
                                <field name="apply_manual_currency_exchange"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_ok" type="object"
                                string="OK" class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
         <record model="ir.ui.view" id="view_account_payment_form_inh_l10n_mx">
        <field name="name">view.account.payment.form.inh.l10n.mx</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="inside">
                <field name="analytic_id"/>
            </xpath>
        </field>
         </record>

    </data>
</odoo>